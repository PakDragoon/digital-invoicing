        "date-fns": "^4.1.0",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.7",
        "fast-csv": "^5.0.2",
        "helmet": "^8.1.0",
        "mysql2": "^3.14.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
